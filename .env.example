# InventorAI Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# AI APIs (required for novelty analysis)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key

# =============================================================================
# Supabase (required for database)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =============================================================================
# Patent Search APIs
# =============================================================================

# PatentsView API (RECOMMENDED - covers ALL 12M+ granted US patents)
# Request key at: https://patentsview.org/apis/keyrequest
# Free tier available, key delivered via email
PATENTSVIEW_API_KEY=your_patentsview_key

# USPTO PTAB API (supplementary - covers challenged patents only)
# Requires USPTO.gov account + ID.me verification
# Get key from: https://data.uspto.gov/apis/getting-started
USPTO_API_KEY=your_uspto_key

# =============================================================================
# Web Search APIs
# =============================================================================
TAVILY_API_KEY=your_tavily_key
BRAVE_API_KEY=your_brave_key

# =============================================================================
# Retail Search APIs
# =============================================================================
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret

# =============================================================================
# App Configuration
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
